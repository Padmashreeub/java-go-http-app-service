def getDockerTag() {
 def tag = sh script: 'git rev-parse HEAD', returnStdout: true 
 return tag
}
pipeline{

      agent {
                docker {
                image 'maven'
                args '-v $HOME/.m2:/root/.m2'
                }
             }
      environment {
          Docker_tag = getDockerTag()
      }
        
        stages{
              stage('build'){
		      steps {
			      script{
                sh 'docker build . -t chiju/java-app:$Docker_tag'                
                withCredentials([string(credentialsId: 'dockerhub', variable: 'docker_credentials')]) {
                sh '''docker login -u chiju -p $docker_password
                docker push chiju/java-app:$Docker_tag
		'''
                }
                
			      }
		      }
              }
		
            }	       	     	         
}
