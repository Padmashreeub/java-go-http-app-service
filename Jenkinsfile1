def getDockerTag() {
 def tag = sh script: 'git rev-parse HEAD', returnStdout: true 
 return tag
}
pipeline{

      agent any
      
      environment {
          Docker_tag = getDockerTag()
      }
        
        stages{
	      stage('git clone'){
	      	steps{
	      		git 'https://github.com/chiju/java-go-http-app-service.git'
		}
		}
              stage('build'){
		steps {
			script{
                sh '''cd /var/lib/jenkins/workspace/first_pipeline/docker/java
		docker build . -t chiju/java-app:$Docker_tag
		'''                
                withCredentials([string(credentialsId: 'dockerhub', variable: 'docker_credentials')]) {
                sh '''docker login -u chiju -p $docker_credentials
                docker push chiju/java-app:$Docker_tag
		'''
                }
                
			      }
		      }
              }
		
            }	       	     	         
}
